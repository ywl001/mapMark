<!-- components/map/map.wxml -->
<!-- <view class = "container"> -->
<map
 id="map"
 longitude="{{longitude}}"
 latitude="{{latitude}}"
 scale="{{scale}}"
 show-location="true"
 enable-satellite="{{isSatellite}}"
 bind:longpress="onLongpressMap"
 markers="{{markers}}"
 bindmarkertap="onMarkerTap"
 bindlabeltap="onMarkerTap"
 bindregionchange="onRegionChange"
 bind:tap="onTapMap"
 bind:touchstart="onMapTouchStart"
/>
<!-- 定位按钮：位于地图底部中间 -->
<image class="btn-location" src="../../assets/btn_location.svg" bindtap="onLocationClick" />
<text class="scale">{{currentScale}}</text>
