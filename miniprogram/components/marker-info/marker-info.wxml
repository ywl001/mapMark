<view class="container">
  <view class="left" wx:if="{{markerData.imageUrl}}" bindtap="previewImage" >
    <image class="image" src="{{markerData.imageUrl}}" mode="aspectFit"></image>
  </view>
  <view class="right">
    <!-- <view class="row title">{{markerData.name}}</view>
    <view class="row contact">
      <view class="contact-info">{{markerData.attr.manager}}</view>
      <view class="contact-info" bindtap="makePhoneCall">{{markerData.attr.tel}}</view>
    </view> -->

    <view class="content">
      <text class="title">{{markerData.name}}</text>
      <text class="contact-info" wx:if="markerData.owner">{{markerData.owner}}</text>
      <text class="contact-info" wx:if="markerData.tel">{{markerData.tel}}</text>
      <!-- <text class="contact-info" wx:if="markerData.level">{{markerData.level}}çº§</text> -->
    </view>

    <view class="row buttons" wx:if="{{isEdit}}">
      <view class="button-wrapper" bind:tap="onEdit">
        <view class="button btn_edit"  ></view>
      </view>
      <view class="divider"></view>
      <view class="button-wrapper" bind:tap="onMove">
        <view class="button btn_move" ></view>
      </view>
      <view class="divider"></view>
      <view class="button-wrapper" bind:tap="onDelete">
        <view class="button btn_del" ></view>
      </view>
    </view>
  </view>
</view>